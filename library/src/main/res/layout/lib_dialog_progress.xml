<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lib_loading_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/loading_frame"
        android:contentDescription="@string/lib_name"/>

    <TextView
        android:id="@+id/lib_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lib_loading_img"
        android:layout_centerHorizontal="true"
        android:text="@string/lib_dialog_loading"
        android:textColor="@color/lib_load_text"
        android:textSize="18sp"/>

</RelativeLayout>